{
	"plugins": ["@trivago/prettier-plugin-sort-imports"],
	"trailingComma": "all",
	"printWidth": 175,
	"semi": false,
	"singleQuote": true,
	"tabWidth": 2,
	"importOrder": [
		"<THIRD_PARTY_MODULES>",
		"^react/(.*)$",
		"^next/(.*)$",
		"^[@/]",
		"^@assets/(.*)$",
		"^@hooks/(.*)$",
		"^@components/(.*)$",
		"^_ui/(.*)$",
		"^_modals/(.*)$",
		"^_popups/(.*)$",
		"^[./]"
	],
	"importOrderSeparation": true,
	"importOrderSortSpecifiers": true,
	"singleAttributePerLine": true
}
